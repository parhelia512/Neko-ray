                                                    android:layout_marginTop="1.0dip"
                                                    android:src="@drawable/uwu_arrow"
                                                    app:tint="?android:textColorPrimary"
                                                    android:layout_marginStart="2.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </FrameLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/layout_share"
                                android:gravity="center"
                                android:layout_gravity="top|center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:layout_marginBottom="8.0dip"
                                android:layout_marginStart="16.0dip"
                                android:layout_marginEnd="16.0dip"
                                app:cardBackgroundColor="#00000000"
                                app:cardCornerRadius="28.0dip"
                                app:cardElevation="0.0dip">
                                <FrameLayout
                                    android:background="@drawable/uwu_bg_menu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:clipToPadding="false"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="16.0dip"
                                            android:layout_marginBottom="16.0dip"
                                            android:layout_marginStart="16.0dip"
                                            android:layout_marginEnd="8.0dip">
                                            <LinearLayout
                                                android:background="@drawable/uwu_google_shape"
                                                android:layout_width="45.0dip"
                                                android:layout_height="45.0dip"
                                                android:backgroundTint="?attr/colorThemeUwu">
                                                <ImageView
                                                    android:gravity="center"
                                                    android:layout_width="25.0dip"
                                                    android:layout_height="25.0dip"
                                                    android:layout_marginTop="10.0dip"
                                                    android:src="@drawable/ic_share_24dp"
                                                    android:layout_marginStart="10.0dip"
                                                    app:tint="?attr/colorIcon" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <RelativeLayout
                                            android:paddingTop="16.0dip"
                                            android:paddingBottom="16.0dip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.0"
                                            android:layout_marginStart="8.0dip"
                                            android:layout_marginEnd="8.0dip">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <TextView
                                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/title_configuration_share" />
                                            </LinearLayout>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="16.0dip"
                                            android:layout_marginBottom="16.0dip"
                                            android:layout_marginStart="8.0dip"
                                            android:layout_marginEnd="16.0dip">
                                            <LinearLayout
                                                android:background="@drawable/uwu_bg_circle_arrow"
                                                android:layout_width="28.0dip"
                                                android:layout_height="28.0dip">
                                                <ImageView
                                                    android:layout_width="25.0dip"
                                                    android:layout_height="25.0dip"
                                                    android:layout_marginTop="1.0dip"
                                                    android:src="@drawable/uwu_arrow"
                                                    app:tint="?android:textColorPrimary"
                                                    android:layout_marginStart="2.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </FrameLayout>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:id="@+id/layout_restore"
                                android:gravity="center"
                                android:layout_gravity="top|center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8.0dip"
                                android:layout_marginBottom="16.0dip"
                                android:layout_marginStart="16.0dip"
                                android:layout_marginEnd="16.0dip"
                                app:cardBackgroundColor="#00000000"
                                app:cardCornerRadius="28.0dip"
                                app:cardElevation="0.0dip">
                                <FrameLayout
                                    android:background="@drawable/uwu_bg_menu"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <LinearLayout
                                        android:gravity="center_vertical"
                                        android:clipToPadding="false"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="16.0dip"
                                            android:layout_marginBottom="16.0dip"
                                            android:layout_marginStart="16.0dip"
                                            android:layout_marginEnd="8.0dip">
                                            <LinearLayout
                                                android:background="@drawable/uwu_google_shape"
                                                android:layout_width="45.0dip"
                                                android:layout_height="45.0dip"
                                                android:backgroundTint="?attr/colorThemeUwu">
                                                <ImageView
                                                    android:gravity="center"
                                                    android:layout_width="25.0dip"
                                                    android:layout_height="25.0dip"
                                                    android:layout_marginTop="10.0dip"
                                                    android:src="@drawable/ic_restore_24dp"
                                                    android:layout_marginStart="10.0dip"
                                                    app:tint="?attr/colorIcon" />
                                            </LinearLayout>
                                        </LinearLayout>
                                        <RelativeLayout
                                            android:paddingTop="16.0dip"
                                            android:paddingBottom="16.0dip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1.0"
                                            android:layout_marginStart="8.0dip"
                                            android:layout_marginEnd="8.0dip">
                                            <LinearLayout
                                                android:orientation="vertical"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content">
                                                <TextView
                                                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="@string/title_configuration_restore" />
                                            </LinearLayout>
                                        </RelativeLayout>
                                        <LinearLayout
                                            android:gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="16.0dip"
                                            android:layout_marginBottom="16.0dip"
                                            android:layout_marginStart="8.0dip"
                                            android:layout_marginEnd="16.0dip">
                                            <LinearLayout
                                                android:background="@drawable/uwu_bg_circle_arrow"
                                                android:layout_width="28.0dip"
                                                android:layout_height="28.0dip">
                                                <ImageView
                                                    android:layout_width="25.0dip"
                                                    android:layout_height="25.0dip"
                                                    android:layout_marginTop="1.0dip"
                                                    android:src="@drawable/uwu_arrow"
                                                    app:tint="?android:textColorPrimary"
                                                    android:layout_marginStart="2.0dip" />
                                            </LinearLayout>
                                        </LinearLayout>
                                    </LinearLayout>
                                </FrameLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>