<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/main_content"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.appbar.AppBarLayout
        android:theme="@style/AppTheme.AppBarOverlay"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:theme="@style/Uwu.Material3.CollapsingToolbar"
            android:id="@+id/collapsing_toolbar"
            android:background="?attr/colorThemeUwu"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            app:contentScrim="?attr/colorThemeUwu"
            app:expandedTitleMarginBottom="24.0dip"
            app:expandedTitleMarginEnd="24.0dip"
            app:expandedTitleMarginStart="24.0dip"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarTitle.Expanded"
            app:extraMultilineHeightEnabled="true"
            app:forceApplySystemWindowInsetTop="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:maxLines="3"
            app:scrimAnimationDuration="50"
            app:statusBarScrim="@null"
            app:title="@string/uwu_speedtest_title"
            app:titleCollapseMode="scale"
            app:toolbarId="@+id/toolbar">
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
        <androidx.appcompat.widget.ActionBarContextView
            android:theme="?attr/actionModeTheme"
            android:id="@+id/action_context_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>
    <FrameLayout
        android:background="@drawable/uwu_background_lengkung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.cardview.widget.CardView
            android:paddingTop="16.0dip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="0.0dip"
            android:layout_marginStart="16.0dip"
            android:layout_marginEnd="16.0dip"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="28.0dip"
            app:cardElevation="0.0dip">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_marginStart="-16.0dip"
                android:layout_marginEnd="-16.0dip"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.github.anastr.speedviewlib.PointerSpeedometer
                        android:id="@+id/speedometer"
                        android:visibility="gone"
                        android:layout_width="200.0dip"
                        android:layout_height="200.0dip"
                        android:layout_marginTop="16.0dip"
                        android:layout_marginBottom="16.0dip"
                        app:sv_endDegree="405"
                        app:sv_maxSpeed="100.0"
                        app:sv_speedTextColor="?android:textColorPrimary"
                        app:sv_speedTextSize="24.0sp"
                        app:sv_startDegree="135"
                        app:sv_textColor="?android:textColorPrimary"
                        app:sv_unit="Mbps"
                        app:sv_speedBackgroundColor="@color/uwu_transparent"
                        app:sv_backgroundCircleColor="@color/uwu_transparent"
                        app:sv_speedometerColor="?attr/colorThemeUwu"
                        app:sv_speedometerBackColor="?attr/colorPrimaryInverse"
                        app:sv_centerCircleColor="?attr/colorThemeUwu"
                        app:sv_indicatorColor="?attr/colorThemeUwu"
                        app:sv_indicatorLightColor="?attr/colorThemeUwu"
                        app:sv_unitTextColor="?android:textColorPrimary"
                        app:sv_pointerColor="?attr/colorThemeUwu"
                        app:sv_markColor="?attr/colorThemeUwu"
                        app:sv_withTremble="false" />
                    <GridLayout
                        android:padding="8.0dip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowOrderPreserved="false"
                        android:columnCount="2"
                        android:columnOrderPreserved="false"
                        android:alignmentMode="alignMargins">
                        <androidx.cardview.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="8.0dip"
                            android:layout_columnWeight="1.0"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="12.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16.0dip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:src="@drawable/ic_ping"
                                    android:tint="?attr/colorThemeUwu" />
                                <TextView
                                    android:textSize="16.0sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Ping" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:id="@+id/textPing"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    android:text="ms" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="8.0dip"
                            android:layout_columnWeight="1.0"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="12.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16.0dip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:src="@drawable/ic_jitter"
                                    android:tint="?attr/colorThemeUwu" />
                                <TextView
                                    android:textSize="16.0sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jitter" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:id="@+id/textJitter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    android:text="ms" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="8.0dip"
                            android:layout_columnWeight="1.0"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="12.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16.0dip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:src="@drawable/ic_download"
                                    android:tint="?attr/colorThemeUwu" />
                                <TextView
                                    android:textSize="16.0sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Download" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:id="@+id/textDownload"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    android:text="Mbps" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:layout_width="0.0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="8.0dip"
                            android:layout_columnWeight="1.0"
                            app:cardBackgroundColor="?attr/colorCard"
                            app:cardCornerRadius="12.0dip"
                            app:cardElevation="0.0dip">
                            <LinearLayout
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="16.0dip"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:layout_width="32.0dip"
                                    android:layout_height="32.0dip"
                                    android:layout_marginBottom="8.0dip"
                                    android:src="@drawable/ic_upload"
                                    android:tint="?attr/colorThemeUwu" />
                                <TextView
                                    android:textSize="16.0sp"
                                    android:textColor="?android:textColorPrimary"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Upload" />
                                <TextView
                                    android:textSize="14.0sp"
                                    android:textColor="?android:textColorSecondary"
                                    android:id="@+id/textUpload"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4.0dip"
                                    android:text="Mbps" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="?attr/colorText"
                        android:id="@+id/startButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:text="START"
                        android:backgroundTint="?attr/colorThemeUwu"
                        android:paddingHorizontal="24.0dip"
                        android:paddingVertical="12.0dip" />
                    <Button
                        android:textSize="16.0sp"
                        android:textColor="?attr/colorText"
                        android:id="@+id/stopButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16.0dip"
                        android:text="STOP"
                        android:backgroundTint="?attr/colorThemeUwu"
                        android:paddingHorizontal="24.0dip"
                        android:paddingVertical="12.0dip"
                        android:visibility="gone"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>